<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="server-core"/>

    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.zk.url}"/>
    <dubbo:provider protocol="dubbo" accepts="1000" />
    <dubbo:protocol name="dubbo"/>
    <dubbo:reference interface="com.huoli.flight.server.api.SmsService" id="smsService"
                   group="${dubbo.group}" timeout="10000" connections="2"/>
</beans>